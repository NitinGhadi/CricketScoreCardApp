<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ECFFDC">
    <!--Nyanza-->


        <TextView
            android:id="@+id/textBowlerName"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bowler Name"
            android:textSize="14sp"
            />

        <TextView
            android:textSize="14sp"
            android:id="@+id/textBowlerOver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            />

        <TextView
            android:textSize="14sp"
            android:id="@+id/textBowlerMaiden"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/textBowlerRun"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="6"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/textBowlerWicket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            />



        <TextView
            android:textSize="14sp"
            android:id="@+id/textBowlerEcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_weight="1"
            />

</LinearLayout>